<h1>Articles</h1>





<div class="container">
    <div class="custyle">
    <table class="table table-striped custab">
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th>Author</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
        <% @articles.each do |article| %>
            <tr>
                <td><%= article.title %></td>
                <td><%= article.body %></td>
                <td><%= article.author %></td>
                <td class="text-center"><%= link_to 'Show', article, :class => "btn btn-primary btn-xs", :style => "color : #fff;" %>
                  <%= link_to 'Edit', edit_article_path(article), :class => "btn btn-info btn-xs", :style => "color : #fff;" %>
                  <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-xs", :style => "color : #fff;" %></td>
            </tr>
        <% end %>
    </table>
    </div>
</div>



<%= link_to 'New Article', new_article_path, :class => "btn btn-warning" %>



<style type="text/css">
  
  .custab{
    border: 1px solid #ccc;
    padding: 5px;
    margin: 5% 0;
    box-shadow: 3px 3px 2px #ccc;
    transition: 0.5s;
    }
.custab:hover{
    box-shadow: 3px 3px 0px transparent;
    transition: 0.5s;
    }

</style>